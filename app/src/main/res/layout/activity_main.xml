<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/totalGames"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="120dp"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/homeWins"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/totalGames"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/awayLoses"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/totalGames"
            android:layout_toRightOf="@+id/homeWins"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/draws"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="120dp"
            android:layout_below="@+id/homeWins"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/awayHomeWins"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/draws"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/homeAwayLoses"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/awayHomeWins"
            android:layout_below="@+id/draws"
            android:background="@android:color/white"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeAwayLoses"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>